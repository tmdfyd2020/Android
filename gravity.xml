<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:andriod="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/gravity_scene">

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="left" />
    <!-- layout_gravity : 뷰가 어디에 위치할 것인지를 결정해준다. -->

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="center" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="right" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="#03A9F4"
        android:textSize="32sp"
        andriod:textStyle="bold"
        android:text="left" />
    <!-- match_parent : 부모가 갖는 길이를 모두 채울 때 사용. 해당 레이아웃을 취하는 컨테이너의 길이를 모두 채운다. -->
    <!-- wrap_content : 해당 뷰가 그려질 수 있도록 필요한 길이만 사용 -->
    <!-- gravity : 뷰의 위치가 아니라 뷰의 내용물의 위치를 결정해준다. -->
    <!-- width와 height를 둘다 wrap_content로 하면 여유 공간이 없기 때문에 gravity가 의미가 없어진다. -->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textColor="#1930AE"
        android:textSize="32sp"
        andriod:textStyle="bold"
        android:text="right" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="#9BA81A"
        android:textSize="32sp"
        andriod:textStyle="bold"
        android:text="center" />
</LinearLayout>